<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhavesh.voter.Activity3">

    <!--<android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.NoActionBar">-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentEnd="true" />

    <!--</android.support.design.widget.AppBarLayout>-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/rl1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate 1"
                android:textSize="25dp"
                android:id="@+id/tv1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="उम्मीदवार 1"
                android:textSize="25dp"
                android:id="@+id/tv1Hin"
                android:layout_below="@id/tv1"
                />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/aap"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/rl2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate 2"
                android:textSize="25dp"
                android:id="@+id/tv2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="उम्मीदवार 2"
                android:textSize="25dp"
                android:id="@+id/tv2Hin"
                android:layout_below="@id/tv2"
                />

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/shivsena"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/rl3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate 3"
                android:textSize="25dp"
                android:id="@+id/tv3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="उम्मीदवार 3"
                android:textSize="25dp"
                android:id="@+id/tv3Hin"
                android:layout_below="@id/tv3"
                />

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/congress"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:id="@+id/rl4">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate 4"
                android:textSize="25dp"
                android:id="@+id/tv4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="उम्मीदवार 4"
                android:textSize="25dp"
                android:id="@+id/tv4Hin"
                android:layout_below="@id/tv4"
                />

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:src="@drawable/bjp"
                android:scaleType="fitXY"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <!--<ImageView
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shivsena"
        android:layout_marginTop="30dp"
        android:layout_below="@id/tv1"
        android:gravity="center" />

        <ImageView
        android:id="@+id/iv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/congress"
        android:layout_below="@id/tv2"
        android:gravity="center" />

        <ImageView
        android:id="@+id/iv4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/bjp"
        android:layout_below="@id/tv3"
        android:gravity="center" />
        -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bt4"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/save"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/bt4"
                android:layout_marginTop="20dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/checkvote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/check"
                android:layout_marginTop="5dp"
                android:visibility="gone"/>

        </RelativeLayout>


    </LinearLayout>
    </ScrollView>
</RelativeLayout>